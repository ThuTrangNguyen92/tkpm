	<form action="#" method="post" enctype="multipart/form-data">
        <h1>Driver Signup Form</h1>
        
		<label for="name">Name:</label>
		<input type="text" id="name" name="name" required>

		<label for="mobile">Mobile Number:</label>
		<input type="text" id="mobile" name="mobile" required>
		<div class="id-card">
            <label for="mobile">4C card number:</label>
            <input type="text" id="mobile" name="mobile" required>
            <input type="file" id="license_photo" name="license_photo" accept=".jpg,.jpeg,.png,.gif">
        </div>

        <div class="driver-license">
            <label for="license">Driver's License number:</label>
            <input type="text" id="license" name="license" required>

            <input type="file" id="license_photo" name="license_photo" accept=".jpg,.jpeg,.png,.gif">
        </div>
        
        <div class="car-plate">
            <label for="car_plate">Car Plate Number:</label>
        <input type="text" id="car_plate" name="car_plate" required>

        <input type="file" id="car_photo" name="car_photo" accept=".jpg,.jpeg,.png,.gif">
        </div>

        

        

        

        <input type="submit" value="Submit">
    </form>


